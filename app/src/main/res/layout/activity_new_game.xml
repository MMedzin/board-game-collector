<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="cancel"
                app:icon="@drawable/abc_vector_test" />

            <TextView
                android:id="@+id/titleNewGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gameTitleLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textLongMessage|textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/originalTitleLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/originalTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textLongMessage|textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yearPublishedLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/yearPublished"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number" />
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/designersLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/designers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/artistsLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/artists"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/descriptionLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/orderDateLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:labelFor="@id/orderDate"/>

                        <EditText
                            android:id="@+id/orderDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autofillHints="date"
                            android:ems="10"
                            android:inputType="date" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/priceLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/sdcLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/sdc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/eanUpcLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/eanUpc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/productCodeLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/productCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rankLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/rank"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/typeLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <Spinner
                            android:id="@+id/typeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dropdown"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/commentLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textLongMessage|textPersonName"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/confirmBtn"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:onClick="addNewGame" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>